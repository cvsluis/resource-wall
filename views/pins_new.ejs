<!DOCTYPE html>
<html lang="en">

<head>
  <title>Create a Pin</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/pins_new.css" />

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_nav.ejs') %>

    <div class="pin-new">
      <a href="/pins/" class="close-button"><i class="fa-solid fa-x"></i></a>
      <form action="/api/pins/" method="POST">
        <input type="text" id="add-pin-title" name="title" placeholder="Add your title" required>
        <div class="form-inputs">
          <label for="url">URL</label>
          <input type="url" id="add-pin-url" name="url" placeholder="https://example.com" required>
        </div>
        <div class="form-inputs">
          <label for="about">About</label>
          <textarea id="add-pin-about" name="description" rows="7" maxlength="250"
            placeholder="Tell everyone what your Resource is about" required></textarea>
        </div>
        <div class="form-inputs">
          <div class="form-inputs">
            <h2>Categories</h2>
            <p>Must select one category:</p>
          </div>
          <div class="categories">
            <% for (const category of categories) { %>
              <input type="radio" value="<%= category.id %>" name="category_id" id="tag-<%= category.id %>" required/>
              <label for="tag-<%= category.id %>"><%= category.title %></label>
            <% } %>
          </div>
        </div>
        <input type="submit" id="add-pin-save" value="Save">
      </form>
    </div>

</body>

</html>
