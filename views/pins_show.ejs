<!DOCTYPE html>
<html lang="en">

<head>
  <title>Linkfolio</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/pins_show.css" />

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_nav.ejs') %>
    <div id="pin">
      <a href="/pins/" class="close-button"><i class="fa-solid fa-x"></i></a>
      <div class="pin-container">
        <div class="text">
          <h1><%= pin.title %></h1>
          <p><%= pin.description %></p>
        </div>
        <div id="single-pin-img">
          <a target="_blank" href="<%= pin.url %>"><img src="<%= pin.image_url %>"
              alt="<%= pin.image_alt %>" title="Click here to view url"/></a>
        </div>
        <a href="/pins/?q=<%= pin.category_name %>" title="Click here to browse this category"><p class="tag"><%= pin.category_name %></p></a>
        <div id="heart-stars">

          <% if (userId) { %>
              <!-- Check if the current user is NOT the owner of the pin -->
              <% if (userId != pin.owner_id) { %>

                  <!-- If current user has liked the pin -->
                  <% if (pin.user_has_liked) { %>
                      <!-- Display solid heart icon to indicate the pin is liked -->
                      <i class="fa-solid fa-heart" data-pin-id="<%= pinId %>"></i>
                  <% } else { %>
                      <!-- Display regular heart icon to indicate the pin is not yet liked -->
                      <i class="fa-regular fa-heart" data-pin-id="<%= pinId %>"></i>
                  <% } %>


              <% } else { %>
                  <!-- If the current user is the owner of the pin OR user is not logged in, display an invisible heart to maintain layout -->
                  <i class="fa-invisible fa-heart" data-pin-id="<%= pinId %>"></i>
              <% } %>

          <% } else { %>
              <!-- If user isn't logged in, display an invisible heart to maintain layout -->
              <i class="fa-invisible fa-heart" data-pin-id="<%= pinId %>"></i>
          <% } %>


            <% if (pin.user_has_rated) { %>
              <% console.log(pin.user_rating) %>
              <div class="stars">
                <% for (let i = 1; i <= 5; i++) { %>
                  <% if (i <= pin.user_rating) { %>
                    <i class="fa-solid fa-star" id="user-rating-<%= i %>"></i>
                  <% } %>
                <% } %>
              </div>
            <% } else { %>

            <form method="POST" action="/api/pins/<%= pinId %>/ratings" id="rating-form">
              <div class="stars">
                <input type="radio" value="1" name="rating" id="star-1" data-pin-id="<%= pinId %>">
                <label for="star-1"><i class="fa-regular fa-star" id="icon-1"></i></label>

                <input type="radio" value="2" name="rating" id="star-2" data-pin-id="<%= pinId %>">
                <label for="star-2"><i class="fa-regular fa-star" id="icon-2"></i></label>

                <input type="radio" value="3" name="rating" id="star-3" data-pin-id="<%= pinId %>">
                <label for="star-3"><i class="fa-regular fa-star" id="icon-3"></i></label>

                <input type="radio" value="4" name="rating" id="star-4" data-pin-id="<%= pinId %>">
                <label for="star-4"><i class="fa-regular fa-star" id="icon-4"></i></label>

                <input type="radio" value="5" name="rating" id="star-5" data-pin-id="<%= pinId %>">
                <label for="star-5"><i class="fa-regular fa-star" id="icon-5"></i></label>
              </div>
            </form>

            <% } %>

        </div>
        </div>
        <div class="comments-header">
          <h3>Comments</h3>
          <hr class="dark-line">
        </div>
        <div class="comments">
          <% for (const comment of comments) { %>
            <article class="comment">
              <div class="comment-user">
                <i id="comment-icon" class="fa-solid fa-user"></i>
                <div class="comment-name-date">
                  <a href="/users/<%= comment.owner_id %>" class="username">
                    <h5><%= comment.name %></h5>
                  </a>
                  <h6><%= comment.created_at %></h6>
                </div>
              </div>
              <p><%= comment.description %></p>
            </article>
            <hr class="light-line">
            <% } %>
            <% if (userId) { %>
              <form method="POST" action="/api/pins/<%= pinId %>/comments" id="comment-form">
                <input type="text" id="add-comment" name="description" placeholder="Add a comment">
              </form>
            <% } %>
        </div>
      </div>
    </div>
</body>
</html>
