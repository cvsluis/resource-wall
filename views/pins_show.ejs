<!DOCTYPE html>
<html lang="en">

<head>
  <title>Linkfolio</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/pins_show.css" />

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_nav.ejs') %>
    <div id="pin">
      <a href="/pins/" class="close-button"><i class="fa-solid fa-x"></i></a>
      <div class="pin-container">
        <div class="text">
          <h1><%= pin.title %></h1>
          <p><%= pin.description %></p>
        </div>
        <div id="single-pin-img">
          <a target="_blank" href="<%= pin.url %>"><img src="<%= pin.image_url %>"
              alt="<%= pin.image_alt %>" title="Click here to view url"/></a>
        </div>
        <a href="/pins/?q=<%= pin.category_name %>" title="Click here to browse this category"><p class="tag"><%= pin.category_name %></p></a>
        <div id="heart-stars">
          <!-- Check if the current user is NOT the owner of the pin -->
          <% if (userId != pin.owner_id) { %>

              <!-- If current user has liked the pin -->
              <% if (pin.user_has_liked) { %>
                  <!-- Display solid heart icon to indicate the pin is liked -->
                  <i class="fa-solid fa-heart" data-pin-id="<%= pinId %>"></i>
              <% } else { %>
                  <!-- Display regular heart icon to indicate the pin is not yet liked -->
                  <i class="fa-regular fa-heart" data-pin-id="<%= pinId %>"></i>
              <% } %>

          <% } else { %>
              <!-- If the current user is the owner of the pin, display an invisible heart to maintain layout -->
              <i class="fa-invisible fa-heart" data-pin-id="<%= pinId %>"></i>
          <% } %>
          <% if (userId) { %>
            <!-- update to include same logic as for heart? re: owner id -->
            <form method="POST" action="/api/pins/<%= pinId %>/ratings" id="rating-form">
              <div class="stars">
                <% for (let i = 1; i <= 5; i++) { %>
                  <input type="radio" value="<%= i %>" name="rating" id="empty-star-<%= i %>">
                  <label for="empty-star-<%= i %>"><a href=""><i class="fa-regular fa-star"></i></a></label>
                <% } %>
                  <!-- <a href=""><i class="fa-solid fa-star"></i></a> -->
              </div>
            </form>
          <% } %>
        </div>
        </div>
        <div class="comments">
          <% for (const comment of comments) { %>
            <article class="comment">
              <div class="comment-user">
                <i id="comment-icon" class="fa-solid fa-user"></i>
                <div class="comment-name-date">
                  <a href="/users/<%= comment.owner_id %>" class="username">
                    <h5><%= comment.name %></h5>
                  </a>
                  <h6><%= comment.created_at %></h6>
                </div>
              </div>
              <p><%= comment.description %></p>
            </article>
            <hr>
            <% } %>
            <% if (userId) { %>
              <form method="POST" action="/api/pins/<%= pinId %>/comments" id="comment-form">
                <input type="text" id="add-comment" name="description" placeholder="Add a comment">
              </form>
            <% } %>
        </div>
      </div>
    </div>
</body>
</html>
